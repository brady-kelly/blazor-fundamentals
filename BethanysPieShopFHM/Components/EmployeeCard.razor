<div class="col">
    <div class="card rounded-3 employee-card">
        <div class="card-header py-3">
            @if (Employee != null)
            {
                <h4>@Employee.FirstName @Employee.LastName</h4>
            }
        </div>
        <div class="card-body employee-card text-center">
            <div class="mb-3">
                <img src="@($"https://gillcleeren.pluralsight.blob.core.windows.net/person/{Employee.EmployeeId}.jpg")" alt="Employee Id Image"
                     class="employee-img rounded-circle img-fluid"/>
            </div>
            <a href="@($"employeedetail/{Employee.EmployeeId}")" class="btn btn-outline-primary btn-sm mb-1">
                Full Details
            </a>
        </div>
    </div>
</div>

